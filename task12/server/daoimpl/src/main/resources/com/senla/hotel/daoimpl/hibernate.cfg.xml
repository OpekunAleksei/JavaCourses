<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connetcion.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hoteldatabase?autoReconnect=true&amp;useSSL=false </property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hbm2ddl.auto">update</property>
        	<mapping class="com.senla.hotel.entity.Guest" />
                <mapping class="com.senla.hotel.entity.Room" />
                <mapping class="com.senla.hotel.entity.Service" />
                 <mapping class="com.senla.hotel.entity.History" />
    </session-factory>
</hibernate-configuration>